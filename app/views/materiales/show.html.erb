<%- model_class = Materiale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id_material) %>:</strong></dt>
  <dd><%= @materiale.id_material %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @materiale.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @materiale.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cantidad) %>:</strong></dt>
  <dd><%= @materiale.cantidad %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("Atras")),
              materiales_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("Editar")),
              edit_materiale_path(@materiale), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("Eliminar")),
              materiale_path(@materiale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
