<h1>Productos disponibles</h1>
<div class="row">
<% @productos.each do |producto| %>
 	<div class="col-sm-6 col-md-4">
    	<div class="thumbnail">
      		<img class="img-rounded" alt="<%= producto.id %>" src="<%= producto.foto_path %>" />
	      	<div class="caption">
	        	<h3><%= producto.nombre %></h3>
	        	<p>$ <%= producto.precio %></p>
	        	<p>
		        	<div class="btn btn-primary">
		        		<span class="glyphicon glyphicon-shopping-cart" ></span>
		        		<%= link_to  "Comprar", :action => :comprar%>
		        	</div>
	        	</p>
	      	</div>
    	</div>
  	</div>
  	<%end%>
		        	.
</div>